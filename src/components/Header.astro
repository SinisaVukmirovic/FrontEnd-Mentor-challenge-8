---
import Navbar from './Navbar.astro';
---

<header>
    <Navbar />

    <div class="hero">
        <div class="illustration">
            <img src="/assets/graphics/illustration-intro.svg" alt="Graphic illustration">
        </div>
        <div class="content">
            <h1>Bring everyone together to build better products.</h1>
            <p>Manage makes it simple for software teams to plan day-to-day tasks while keeping the larger team goals in view.</p>
        </div>
    </div>

    <button class="cta-btn">Get Started</button>
</header>

<style>
    header {
        min-height: 100vh;
        padding: 2rem 1rem;
    }

    .illustration {
        margin: 2rem auto 1rem;
    }

    .content {
        padding: 0 .8rem;
        text-align: center;

        & h1 {
            font-size: 2.3rem;
            line-height: 1.2;
            color: var(--Dark-Blue);
        }

        & p {
            color: var(--Dark-Grayish-Blue);
            line-height: 1.7;
            font-weight: 400;
        }
    }

    .cta-btn {
        padding: .75rem 1.5rem;
        margin: 2rem auto;
        display: block;
        background-color: var(--Bright-Red);
        color: var(--Very-Light-Gray);
        font-size: .8rem;
        border-radius: 10rem;
        border: none;
        outline: none;
        filter: drop-shadow(0 .3rem .15rem var(--Dark-Grayish-Blue));
    }

    @media (min-width: 1440px) {
        /* header {
            min-height: 100vh;
            padding: 5rem 10%;
        } */

        .hero {
            margin-top: 10rem;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 5rem;
            align-items: center;

            & h1 {
                font-size: 4.5rem;
                line-height: 1.1;
                color: var(--Dark-Blue);
            }
        }
    }
</style>