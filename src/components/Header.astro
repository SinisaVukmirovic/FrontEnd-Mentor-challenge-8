---
import Navbar from './Navbar.astro';
---

<header>
    <Navbar />
    <div class="hero">
        <div class="content">
            <h1>Bring everyone together to build better products.</h1>
            <p>Manage makes it simple for software teams to plan day-to-day tasks while keeping the larger team goals in view.</p>
        </div>
        <div class="illustration">
            <img src="/assets/graphics/illustration-intro.svg" alt="Graphic illustration">
        </div>
    </div>
</header>

<style>
    @media (min-width: 1440px) {
        header {
            min-height: 100vh;
            padding: 5rem 10%;
        }

        .hero {
            margin-top: 10rem;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 5rem;
            align-items: center;

            & h1 {
                font-size: 4.5rem;
                line-height: 1.1;
                color: var(--Dark-Blue);
            }
        }
    }
</style>