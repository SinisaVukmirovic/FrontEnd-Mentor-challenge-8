---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navbar from "../components/Navbar.astro";

import heroImg from '../../public/assets/graphics/illustration-intro-edited-2.png';
---

<BaseLayout title="Product">
    <div class="didnt-plan-properly">
        <Navbar />
    </div>

    <div class="product">
        <div class="illustration" transition:name="product-chart">
            <img src={heroImg.src} alt="Graphic illustration">
        </div>
        <div class="content">
            <h1>Get Your Product to these stats, too!</h1>
            <p>Manage makes it simple for software teams to plan day-to-day tasks while keeping the larger team goals in view.</p>
        </div>
    </div>
</BaseLayout>

<style>
    .didnt-plan-properly {
        padding: 1rem;
    }

    .product {
        max-width: 1200px;
        margin: 5rem auto;
        padding: 2rem;
        display: grid;
        place-items: center;
        grid-template-columns: 1fr 2fr;
        gap: 5rem;

        & h1 {
            color: var(--Dark-Blue);
            margin-bottom: 2rem;
        }
    }

    @media (min-width: 768px) {
        .didnt-plan-properly {
            padding: 1rem 10% 1rem;
        }
    }
</style>